<Window x:Class="SensorLifetimeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SensorLifetimeApp"
        mc:Ignorable="d"
        Title="Sensors Lifetime" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Load State" Click="LoadStateClick"/>
                <MenuItem Header="Save State" Click="SaveStateClick"/>
                <MenuItem Header="Generaet Empty State File" Click="GenerateEmptyFileClick"/>
            </MenuItem>
            <MenuItem Header="Language">
                <MenuItem Header="en" Click="LangEnClick"/>
                <MenuItem Header="pl" Click="LangPlClick"/>
            </MenuItem>
        </Menu>
    </DockPanel>

</Window>
