<Window x:Class="SensorLifetimeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SensorLifetimeApp.Views"
        mc:Ignorable="d"
        Title="Sensors Lifetime" Height="600" Width="1000">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Load State" Click="LoadStateClick"/>
                <MenuItem Header="Save State" Click="SaveStateClick"/>
                <MenuItem Header="Generaet Empty State File" Click="GenerateEmptyFileClick"/>
            </MenuItem>
            <MenuItem Header="Language">
                <MenuItem Header="en" Click="LangEnClick"/>
                <MenuItem Header="pl" Click="LangPlClick"/>
            </MenuItem>
        </Menu>
        <Border Margin="7">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <local:SettingView></local:SettingView>
            </Grid>
        </Border>
    </DockPanel>
    

</Window>
