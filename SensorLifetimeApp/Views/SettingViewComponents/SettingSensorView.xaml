<UserControl x:Class="SensorLifetimeApp.Views.SettingSensorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SensorLifetimeApp.Views"
             xmlns:p ="clr-namespace:SensorLifetimeApp.Properties"
             mc:Ignorable="d" 
             d:DesignWidth="300"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Label Grid.Row="0" Grid.Column="0"
               HorizontalAlignment="Right" VerticalAlignment="Center"
               Content="{x:Static p:Strings.SensorRadius}">
        </Label>
        <TextBox Grid.Row="0" Grid.Column="1"
                 Width="100" Height="20"
                 Name="SensorRadiusBox"
                 PreviewTextInput="NumberPreviewTextInput">
        </TextBox>

        <Label Grid.Row="1" Grid.Column="0"
               HorizontalAlignment="Right" VerticalAlignment="Center"
               Content="{x:Static p:Strings.BatteryCapacity}">
        </Label>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Width="100" Height="20"
                 Name="BatteryCapacityBox"
                 PreviewTextInput="NumberPreviewTextInput">
        </TextBox>
    </Grid>
</UserControl>
