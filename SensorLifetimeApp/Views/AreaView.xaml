<UserControl x:Class="SensorLifetimeApp.Views.AreaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:p="clr-namespace:SensorLifetimeApp.Properties"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SensorLifetimeApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="550"
             Loaded="AreaRectangleLoaded">

    <StackPanel>
        <Canvas Name="myCanvas" MouseDown="Canvas_MouseDown">

        </Canvas>
        <Button x:Name="SaveImgBtn" Click="SaveImgBtn_Click"  
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Margin="0,525,0,0"
            Padding="5 0">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Images/png/photo-camera.png" Width="15" Margin="0 0 5 0"/>
                <TextBlock Text="{x:Static p:Strings.SaveImage}"/>
            </StackPanel>
        </Button>

    </StackPanel>
</UserControl>
